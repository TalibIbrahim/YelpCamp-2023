<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%=err.message%></h4>
      <hr />
      <p>
        Oops! Something Went Wrong. <% if (err.statusCode) { %>
        <b>(<%=err.statusCode%>)</b>
        <% } %>
      </p>
      <% if (process.env.NODE_ENV !== 'production') { %>
      <p><%= err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
