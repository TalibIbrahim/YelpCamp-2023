<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>

<h1>All Campgrounds</h1>
<a class="btn btn-success mt-2 mb-3" href="/campgrounds/new"
  >Create Campground</a
>
<ul>
  <% for( let camp of campgrounds ) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(camp.images.length){ %>
        <img class="img-fluid" alt="" src="<%= camp.images[0].url %>" />
        <% } else{ %>
        <img
          src="https://res-console.cloudinary.com/dk5pnej6r/thumbnails/v1/image/upload/v1680292443/WWVscENhbXAvemlwd2F6NWRobGVlbGFid3ZhM2c=/preview"
          class="img-fluid"
          alt="" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-secondary"><%= camp.location %></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"
            >View <%= camp.title %></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>

<script src="/javascripts/clustermap.js"></script>
